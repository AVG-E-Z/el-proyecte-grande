@model SolarWatchMVC.ViewModels.SolarWatchViewModel
@{
ViewData["Title"] = "Solar Watch";
}

<h2>Solar Watch</h2>

@if (Model.IsDisplayed)
{
<div>
    <h3>@Model.TypeOfSunData</h3>
    <p>City: @Model.CityToDisplay</p>
    <p>Data: @Model.DataToDisplay</p>
</div>
}
else
{
<form asp-action="FetchData" method="post">
    <div class="form-container">
        <div class="form-group">
            <label asp-for="City">City:</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Date">Date:</label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SunData">Sun Data:</label>
            <select asp-for="SunData" class="form-control">
                <option value="Sunrise">Sunrise</option>
                <option value="Sunset">Sunset</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Fetch Data</button>
    </div>
</form>

@if (Model.IsSomethingWrong)
{
<div class="alert alert-danger">
    There was an error fetching the solar data.
</div>
}
}
